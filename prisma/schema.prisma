// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Medication {
  id Int @id @default( autoincrement() )
  createdAt DateTime @map("created_at") @default( now() )
  updatedAt DateTime @map("updated_at") @updateAt

  name String
  quantity String
  type String
  expiresAt DateTime  @map("expires_at")

}

model MedicationMovement {
  id Int @id @default( autoincrement() )
  createdAt DateTime  @map("created_at") @default( now() )
  updatedAt DateTime @map("updated_at") @updateAt

  medicationId Int @map("medication_id")
  date Date
  quantity String 
  userId Int @map("user_id")
}

model Patient {
  id Int @id @default( autoincrement() )
  name String
  surname String
  birth Date
  cpf String
  email String
  phone String
  address String
  allergy String
  medicalRecord String @map("medical_record")

  CreatedAt DateTime @map("created_at") @default( now() )
  updatedAt DateTime @map("updated_at") @updateAt
}
model user {

  id int 

  name String
  password String
  email String
  role String


  createdAt DateTime  
  UpdatedAt DateTime
}

model PatientHistory {
  id Int @id @default(autoincrement())

  appointmentDate DateTime @map("appointment_date")
  examId int @map("exam_id")
  medicationId int @map("medication_id")
  prescriptionId int @map("prescription_id")

  createdAt DateTime @map("created_at") @default( now() )
  updatedAt DateTime @map("updated_at") @updatedAt
}

model Exam {
  id Int @id @default(autoincrement())

  date Date
  type String
  result String
  observation String

  createdAt DateTime @map("created_at") @default( now() )
  updatedAt DateTime @map("updated_at") @updatedAt
}
