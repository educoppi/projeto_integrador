// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Medication {
  id Int
  createdAt DateTime
  updatedAt DateTime

  name String
  quantity String
  type String
  expiresAt DateTime

}

model MedicationMovement {
  id Int
  createdAt DateTime
  updatedAt DateTime

  medicationId Int
  date Date
  quantity String 
  userId Int
}

model Patient {
  id Int
  name String
  surname String
  birth Date
  cpf String
  email String
  phone String
  address String
  allergy String
  medical_record

  CreatedAt DateTime
  updateAt DateTime
}
model user {

  id int 

  name String
  password String
  email String
  role String


  createdAt DateTime  
  UpdatedAt DateTime
}

model PatientHistory {
  id int

  appointmentDate DateTime
  ExamId int
  medicationId int
  receitaId int

  createdAt DateTime
  updatedAt DateTime
}

model Exam {
  id int

  date Date
  type String
  result String
  observation String

  createdAt DateTime
  updatedAt DateTime
}
