generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int         @id @default(autoincrement())
  name              String
  lastName          String      @map("last_name")
  password          String?
  cpf               String      @unique
  phone             String
  email             String      @unique
  allergy           String?
  situation         String
  birthDate         DateTime    @map("birth_date")
  createdAt         DateTime    @default(now()) @map("created_at")
  updatedAt         DateTime    @updatedAt @map("update_at")
  group             GroupUser[]
  movementsAsDoctor Movement[]  @relation("MovementDoctor")
  movementsAsUser   Movement[]  @relation("MovementUser")
  recordsAsDoctor   Record[]    @relation("recordDoctor")
  recordsAsUser     Record[]    @relation("recordUser")

  @@map("users")
}

model Role {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String
  groups      RoleGroup[]
}

model Group {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  description String
  users       GroupUser[]
  roles       RoleGroup[]
}

model GroupUser {
  id      Int   @id @default(autoincrement())
  userId  Int
  groupId Int
  group   Group @relation(fields: [groupId], references: [id])
  user    User  @relation(fields: [userId], references: [id])

  @@unique([userId, groupId], name: "userId_groupId")
}

model RoleGroup {
  id      Int   @id @default(autoincrement())
  groupId Int
  roleId  Int
  group   Group @relation(fields: [groupId], references: [id])
  role    Role  @relation(fields: [roleId], references: [id])

  @@unique([groupId, roleId], name: "groupId_roleId")
}

model Record {
  id               Int           @id @default(autoincrement())
  userId           Int           @map("user_id")
  patientId        Int           @map("patient_id")
  appointmentDate  DateTime      @map("appointment_date")
  level            Int?
  symptom          String?
  recentMedicine   String?       @map("recent_medicine")
  annotationMedic  String?
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")
  annotationTriage String?
  exam             Exam?
  prescription     Prescription?
  patient          User          @relation("recordDoctor", fields: [patientId], references: [id])
  user             User          @relation("recordUser", fields: [userId], references: [id])

  @@map("records")
}

model Exam {
  id          Int      @id @default(autoincrement())
  recordId    Int      @unique @map("record_id")
  date        DateTime
  type        String
  result      String
  observation String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  record      Record   @relation(fields: [recordId], references: [id])

  @@map("exams")
}

model Prescription {
  id             Int      @id @default(autoincrement())
  recordId       Int      @unique @map("record_id")
  quantity       Int
  observation    String
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  medicationName String   @map("medication_name")
  record         Record   @relation(fields: [recordId], references: [id])

  @@map("prescriptions")
}

model Medication {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")
  name      String
  dosage    String
  quantity  Int
  type      String
  expiresAt DateTime   @map("expires_at")
  movements Movement[]

  @@map("medications")
}

model Movement {
  id           Int          @id @default(autoincrement())
  createdAt    DateTime     @default(now()) @map("created_at")
  updatedAt    DateTime     @updatedAt @map("updated_at")
  medicationId Int          @map("medication_id")
  userId       Int?          @map("user_id")
  doctorId     Int?          @map("doctor_id")
  date         DateTime
  quantity     Int
  movementType MovementType @map("movement_type")
  approvedMovement Boolean  @default(false) @map("approved_movement")

  doctor       User?         @relation("MovementDoctor", fields: [doctorId], references: [id])
  medication   Medication   @relation(fields: [medicationId], references: [id])
  user         User?         @relation("MovementUser", fields: [userId], references: [id])

  @@map("movements")
}

enum MovementType {
  INBOUND
  OUTBOUND
}
